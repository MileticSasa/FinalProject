<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_margin="@dimen/margin_2">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dan"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/iv"
        android:layout_marginTop="@dimen/margin_2"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginStart="@dimen/txt_size_largest"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max:"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/txt_size_largest"
        app:layout_constraintBottom_toBottomOf="@+id/iv"
        app:layout_constraintStart_toEndOf="@+id/iv"
        app:layout_constraintTop_toTopOf="@+id/iv" />

    <TextView
        android:id="@+id/tvMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/margin_1"
        app:layout_constraintBottom_toBottomOf="@+id/iv"
        app:layout_constraintStart_toEndOf="@+id/tv1"
        app:layout_constraintTop_toTopOf="@+id/iv" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_circle"
        android:textColor="@color/white"
        android:paddingTop="@dimen/margin_3"
        app:layout_constraintBottom_toBottomOf="@+id/tvMax"
        app:layout_constraintStart_toEndOf="@+id/tvMax"
        app:layout_constraintTop_toTopOf="@+id/tvMax" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="@dimen/txt_size_medium"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/margin_4"
        app:layout_constraintBottom_toBottomOf="@+id/tvMax"
        app:layout_constraintStart_toEndOf="@+id/tvMax"
        app:layout_constraintTop_toTopOf="@+id/tvMax" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min:"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/margin_4"
        app:layout_constraintBottom_toBottomOf="@+id/iv"
        app:layout_constraintStart_toEndOf="@+id/tv3"
        app:layout_constraintTop_toTopOf="@+id/iv" />

    <TextView
        android:id="@+id/tvMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/margin_1"
        app:layout_constraintBottom_toBottomOf="@+id/iv"
        app:layout_constraintStart_toEndOf="@+id/tv4"
        app:layout_constraintTop_toTopOf="@+id/iv" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_circle"
        android:textColor="@color/white"
        android:paddingTop="@dimen/margin_3"
        app:layout_constraintBottom_toBottomOf="@+id/tvMin"
        app:layout_constraintStart_toEndOf="@+id/tvMin"
        app:layout_constraintTop_toTopOf="@+id/tvMin" />

</androidx.constraintlayout.widget.ConstraintLayout>